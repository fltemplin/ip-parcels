#!/bin/sh
ip -6 add add fe80::1 dev eth0
ip -6 tun add omni0 mode ipip6 local fe80::1 remote fe80::2 dev eth0
ifconfig omni0 192.168.0.1 netmask 255.255.255.0 mtu 65000
#ifconfig omni0 192.168.0.1 netmask 255.255.255.0 mtu 65407
#ifconfig omni0 192.168.0.1 netmask 255.255.255.0 mtu 65535
#ifconfig eno1 mtu 9000
